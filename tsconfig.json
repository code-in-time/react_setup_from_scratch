{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports" : true,
    "esModuleInterop" : true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "types": [
      "jest"
    ]
  },
  "include": ["src/**/*", "src/setupTests.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}